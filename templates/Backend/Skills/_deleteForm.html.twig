<form action="{{ path('app.admin.skills.delete', {id: skill.id}) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette compétence ?')">
	<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ skill.id) }}">

	<button type="submit" class="btn btn-danger">
		<i class="bi bi-trash3"></i>
		Supprimer
	</button>
</form>

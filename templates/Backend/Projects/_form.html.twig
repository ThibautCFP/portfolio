{{ form_start(form, {attr: {class: 'form-project'}})}}

<div class="row aligne-items-center">
	<div class="col-md-6">{{ form_row(form.title) }}</div>
	<div class="col-md-6">{{ form_widget(form.enabled) }}</div>
</div>

{{ form_row(form.skills) }}
<div class="mb-3">
	<label for="{{ form.content.vars.full_name }}">{{ form.content.vars.label }}</label>
	<div id="ckeditor" data-placeholder="{{ form.content.vars.attr.placeholder }}">

		{{ form.content.vars.value|raw }}
	</div>
	{{ form_row(form.content, {attr: {class: 'js-ckedit-input-hidden'}})}}
</div>
<div class="row mb-3">
	<fieldset class="col-md-12">
		{{ form_label(form.images) }}
		<ul id="image-fields-list" class="d-flex flex-wrap justify-content-between" data-prototype="{{ form_widget(form.images.vars.prototype)|e }}" data-widget-tags="{{ '<li class="w-30 image-fields"></li>'|e }}" data-widget-counter="{{ form.images|length }}">
			{% for imageField in form.images %}
				<li class="w-30 list-image">
					<a class="js-remove-image btn btn-danger">
						<i class="bi bi-x-octagon-fill"></i>
					</a>
					{{ form_errors(imageField) }}
					{{ form_widget(imageField) }}
				</li>
			{% endfor %}
		</ul>
		<button type="button" class="btn btn-primary add-another-collection-widget" data-list-selector="#image-fields-list">Ajouter une image</button>

	</fieldset>
	<fieldset class="col-md-12">
		{{ form_label(form.files) }}
		<ul id="file-fields-list" class="d-flex flex-wrap justify-content-between" data-prototype="{{ form_widget(form.files.vars.prototype)|e }}" data-widget-tags="{{ '<li class="w-30 file-fields"></li>'|e }}" data-widget-counter="{{ form.files|length }}">
			{% for fileField in form.files %}
				<li class="w-30 list-file">
					<a class="js-remove-file btn btn-danger">
						<i class="bi bi-x-octagon-fill"></i>
					</a>
					{{ form_errors(fileField) }}
					{{ form_widget(fileField) }}
				</li>
			{% endfor %}
		</ul>
		<button type="button" class="btn btn-primary add-another-collection-widget" data-list-selector="#file-fields-list">Ajouter un fichier</button>

	</fieldset>
</div>

<div class="text-center">
	<button type="submit" class="btn btn-primary">{{ button_label }}</button>
</div>

{{ form_end(form) }}

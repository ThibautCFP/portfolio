{% extends 'base.html.twig' %}

{% block title %}
	Connexion
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="container-fluid mt-4">
		<form action="{{ path('app.login') }}" method="POST" class="p-3 form card w-50 mx-auto">
			{% if error %}
				<div class="alert alert-danger" role="alert">
					{{ error.messageKey|trans(error.messageData, 'security') }}
				</div>
			{% endif %}
			<h1 class="title text-center">Se connecter</h1>
			<label for="email" class="form-label">Email:</label>
			<input type="text" name="_username" id="email" class="form-control" value="{{ last_username }}">

			<label for="password" class="form-label">Mot de passe:</label>
			<input type="password" name="_password" id="password" class="form-control">

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<div class="d-grid gap-2 d-md-block mt-4 text-center">
				<button type="submit" class="btn btn-inline btn-primary">Se connecter</button>
			</div>

		</form>
	</div>
{% endblock %}

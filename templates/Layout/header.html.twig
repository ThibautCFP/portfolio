<header class="sticky-top">
	<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
		<div class="container-fluid">
			<a href="{{ path('app.front.home') }}" class="navbar-brand">Portfolio</a>
			<ul class="navbar-nav me-auto">
				<li class="navbar-item">
					<a class="nav-link {{ app.request.get('_route') == 'app.front.home' ? 'active' }}" href="">Projets</a>
				</li>
				<li class="navbar-item">
					<a href="{{ path('app.requests') }}" class="nav-link {{ app.request.get('_route') == 'app.requests' ? 'active' }}">Demandes</a>
				</li>
				<li class="navbar-item">
					<a href="" class="nav-link {{ app.request.get('_route') == 'app.front.profil' ? 'active' }}">Profil</a>
				</li>
			</ul>
		</div>
		<div class="collapse navbar-collapse">
			{% if app.user %}
				{% if is_granted('ROLE_ADMIN') %}
					<div class="me-2">
						<div class="btn-group" style="width: 120px;">
							<button type="button" class="btn btn-warning">Admin
								<i class="bi bi-tools"></i>
							</button>
							<button type="button" class="btn btn-warning dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								<span class="visually-hidden">Toggle Dropdown</span>
							</button>
							<div class="dropdown-menu">
								<a class="dropdown-item" href="{{ path('app.admin.projects.index') }}">Projets</a>
								<a class="dropdown-item" href="{{ path('app.admin.skills.index') }}">Compétences</a>
								<a class="dropdown-item" href="{{ path('app.admin.requests') }}">Demandes</a>
								<hr class="dropdown-divider">
								{% if app.user %}
									<a class="dropdown-item" href="/logout">Déconnexion</a>
								{% endif %}
							</div>
						</div>
					</div>
				{% endif %}
			{% endif %}
		</div>
	</nav>


</header>
